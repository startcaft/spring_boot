<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<include resource="org/springframework/boot/logging/logback/base.xml" />
	<!--  
 	<logger name="org.springframework.web" level="INFO"/>
 	<logger name="com.permission.controller" level="INFO" />
 	-->
    
    <!-- 测试环境，开发环境. -->
    <springProfile name="test,dev">
        <logger name="org.springframework.web" level="INFO"/>
        <logger name="com.permission.controller" level="INFO" />
        <logger name="com.permission.service" level="INFO" />
        <logger name="com.management.config" level="INFO" />
    </springProfile>
    
    <!-- 生产环境. -->
    <springProfile name="prod">
        <logger name="org.springframework.web" level="ERROR"/>
        <logger name="com.permission.controller" level="ERROR" />
        <logger name="com.permission.service" level="ERROR" />
        <logger name="com.management.config" level="ERROR" />
    </springProfile>
    
</configuration>